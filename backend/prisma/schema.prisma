// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  platform_admin
  photographer
  studio_staff
  couple
  guest
}

enum Visibility {
  public
  private
  password
}

enum MediaType {
  photo
  video
}

enum MediaProvider {
  cloudinary
  vimeo
}

enum MediaStatus {
  processing
  ready
  failed
}

enum UploaderType {
  photographer
  guest
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  role         Role     @default(photographer)
  passwordHash String   @map("password_hash")
  avatar       String?
  studioId     String?  @map("studio_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  studio        Studio?        @relation(fields: [studioId], references: [id])
  ownedStudio   Studio?        @relation("StudioOwner")
  refreshTokens RefreshToken[]

  @@map("users")
}

model Studio {
  id           String   @id @default(uuid())
  studioName   String   @map("studio_name")
  ownerUserId  String   @unique @map("owner_user_id")
  logo         String?
  brandColor   String?  @default("#E8B4B8") @map("brand_color")
  customDomain String?  @map("custom_domain")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  owner  User    @relation("StudioOwner", fields: [ownerUserId], references: [id])
  staff  User[]
  events Event[]

  @@map("studios")
}

model Event {
  id           String     @id @default(uuid())
  studioId     String     @map("studio_id")
  slug         String     @unique
  brideName    String     @map("bride_name")
  groomName    String     @map("groom_name")
  coverImage   String?    @map("cover_image")
  startDate    DateTime?  @map("start_date")
  endDate      DateTime?  @map("end_date")
  location     String?
  visibility   Visibility @default(public)
  passwordHash String?    @map("password_hash")
  theme        String?    @default("classic")
  viewCount    Int        @default(0) @map("view_count")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  studio       Studio        @relation(fields: [studioId], references: [id], onDelete: Cascade)
  albums       Album[]
  media        Media[]
  guestUploads GuestUpload[]
  analytics    Analytics[]

  @@map("events")
}

model Album {
  id         String   @id @default(uuid())
  eventId    String   @map("event_id")
  title      String
  coverImage String?  @map("cover_image")
  orderIndex Int      @default(0) @map("order_index")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  event Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  media Media[]

  @@map("albums")
}

model Media {
  id           String        @id @default(uuid())
  eventId      String        @map("event_id")
  albumId      String?       @map("album_id")
  type         MediaType
  provider     MediaProvider
  providerId   String        @map("provider_id")
  url          String
  thumbnailUrl String?       @map("thumbnail_url")
  width        Int?
  height       Int?
  size         Int?
  duration     Int?
  uploaderType UploaderType  @default(photographer) @map("uploader_type")
  hidden       Boolean       @default(false)
  highlight    Boolean       @default(false)
  status       MediaStatus   @default(ready)
  title        String?
  description  String?
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  event       Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  album       Album?       @relation(fields: [albumId], references: [id])
  guestUpload GuestUpload?

  @@map("media")
}

model GuestUpload {
  id        String   @id @default(uuid())
  eventId   String   @map("event_id")
  mediaId   String   @unique @map("media_id")
  guestName String   @map("guest_name")
  guestNote String?  @map("guest_note")
  approved  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@map("guest_uploads")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Analytics {
  id        String   @id @default(uuid())
  eventId   String   @map("event_id")
  type      String   // view, upload, video_play, share
  metadata  Json?
  createdAt DateTime @default(now()) @map("created_at")

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("analytics")
}
